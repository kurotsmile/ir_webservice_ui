<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>BCODE-VIN Setting</title>
    <link rel="icon" type="image/x-icon" href="/public/favicon.ico">
    <link href="/public/css/index.css?v=<%= ver %>" rel="stylesheet" />
    <link rel="stylesheet" href="/public/lib/bootstrap/bootstrap.min.css">
    <script src="/public/lib/jquery/jquery-3.6.0.min.js"></script>
    <script src="/public/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/public/js/app.js?v=<%= ver %>"></script>
</head>

<body class="brown">
 
    <%- include('menu_sidebar') %>

    <div class="p-1 px-md-4 mb-1 box-shadow" id="bar_menu_top">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-12 col-md-8 col-lg-8 col-xl-8">
                    <div class="row">
                        <div class="col-1">
                            &nbsp;
                        </div>
                        <div class="col-11">
                            <a href="home"><img id="btn_back_menu_top" src="/public/SVG/Back.svg"/></a>
                            <h2 class="text-white" style="margin-left: -42px;">BCODE-VIN Setting</h2>
                            <div class="breadcrumb"  style="margin-left: -42px;"><a class="nav1" href="/home">Home</a> <img style="width: 10px;height: 10px;margin: 6px;" src="/public/SVG/ArrowForward.svg"> BCODE-VIN Setting</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% const BcodeVin=jsonData.BcodeVin%>
    <!-- Main Content Full Width -->
    <main>
        <div class="container-fluid">

            <div class="row row-p">
                <div class="col-6">
                    <div class="label-txt">Enable</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/On.svg" style="float: right;width: 42px;"  role="button" class="mb-2 mt-3 field_data btn_switch" value="<%= BcodeVin && BcodeVin.Enable ? BcodeVin.Enable : false %>" field_key="Enable" field_type="emp_value" field_type_data="bool"/>
                </div>
            </div>

            <div class="row row-p">
                <div class="col-6">
                    <div class="label-txt">Source</div>
                </div>
                <div class="col-6">
                    <div class="input-group r border mb-2 mt-2">
                        <span class="input-group-text r-left">&nbsp;</span>
                        <select class="form-select custom-combobox field_data" value="<%= BcodeVin && BcodeVin.Source ? BcodeVin.Source : 'Source 1' %>" field_key="Source"  field_type_data="string" field_type="emp_inp" > 
                            <option value="Source" <%= BcodeVin && BcodeVin.Source === 'Source 1' ? 'selected' : '' %>>Source</option>
                        </select>                        
                        <span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>
                    </div>
                </div>
            </div>

            <div class="row row-p">
                <div class="col-6">
                    <div class="label-txt">Manual Barcode</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/On.svg" style="float: right;width: 42px;"  role="button" class="mb-2 mt-3 field_data btn_switch" value="<%= BcodeVin && BcodeVin.ManualBarcode ? BcodeVin.ManualBarcode : false %>" field_key="ManualBarcode" field_type="emp_value" field_type_data="bool"/>
                </div>
            </div>

            <div class="row row-p">
                <div class="col-6">
                    <div class="label-txt">Queue Barcode</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/On.svg" style="float: right;width: 42px;"  role="button" class="mb-2 mt-3 field_data btn_switch" value="<%= BcodeVin && BcodeVin.QueueBarcode ? BcodeVin.QueueBarcode : false %>" field_key="QueueBarcode" field_type="emp_value" field_type_data="bool"/>
                </div>
            </div>

            <div class="row row-p" role="button" onclick="show_group('field_group_bc',this);return false;" value="hide">
                <div class="col-6">
                    <div class="label-txt">Barcode Criteria</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/Down.svg" style="float: right;" class="mb-2 mt-3 icon_show"/>
                </div>
            </div>

            <div class="row row-p row_field_hide field_group_bc">
                <div class="col-6">
                    <div class="label-txt">Job Name</div>
                </div>

                <div class="col-6">
                    <div class="input-group r border mb-2 mt-2">
                        <span class="input-group-text r-left">&nbsp;</span>
                        <select class="form-select custom-combobox field_data" value="<%= BcodeVin && BcodeVin.JobName ? BcodeVin.JobName : 'Job Name 1' %>" field_key="JobName"  field_type_data="string" field_type="emp_inp" > 
                            <option value="Job Name 1" <%= BcodeVin && BcodeVin.JobName === 'Job Name 1' ? 'selected' : '' %>>Job Name 1</option>
                        </select>                        
                        <span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>
                    </div>
                </div>
            </div>

            <div class="row row-h field_group_bc">
                <div class="col-6">
                    <div class="label-txt">Barcode Settings</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/Add.svg" style="float: right;" class="mb-2 mt-3 icon_show"/>
                </div>
            </div>

            <div class="row row-p field_group_bc">
                <div class="col-6">
                    <div class="label-txt">BarcodeString1</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/Edit.svg" style="float: right;width: 42px;"  role="button" class="mb-2 mt-3"/>
                    <img src="/public/SVG/Trash.svg" style="float: right;width: 42px; margin-right: 20px;"  role="button" class="mb-2 mt-3"/>
                </div>
            </div>

            <div class="row row-p field_group_bc">
                <div class="col-6">
                    <div class="label-txt">BarcodeString2</div>
                </div>

                <div class="col-6">
                    <img src="/public/SVG/Edit.svg" style="float: right;width: 42px;"  role="button" class="mb-2 mt-3"/>
                    <img src="/public/SVG/Trash.svg" style="float: right;width: 42px; margin-right: 20px;"  role="button" class="mb-2 mt-3"/>
                </div>
            </div>
            <div class="mt-5 mb-5">&nbsp;</div>
        </div>
    </main>

    <div id="menu_footer" class="fixed">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-info text-white btn-rounded f-right" onclick="save_data();return false;">Save</button>
                    <a href="login" class="btn btn-secondary text-white btn-rounded f-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('p9_alet_warning.ejs') %>
    <script>
        var data_json= JSON.parse('<%- JSON.stringify(jsonData) %>');

        $(document).ready(()=>{
            $(".field_group_bc").hide();
            $("select").change(function(){
                var val=$(this).attr("value");
               $(this).attr("value",val);
            });

            $(".btn_switch").each(function(){
                if ($(this).attr("value")=="true")
                    $(this).attr("src", "/public/SVG/On.svg");
                else 
                    $(this).attr("src", "/public/SVG/Off.svg");
            });

            $(".btn_switch").click(function(){
                var val_emp=$(this).attr("value");
                if(val_emp=="true"){
                    $(this).attr("src", "/public/SVG/Off.svg");
                    $(this).attr("value",false);
                }else{
                    $(this).attr("src", "/public/SVG/On.svg");
                    $(this).attr("value",true);
                }
            });
        });

        function show_edit(emp){
            $(emp).parent().find('img').toggleClass("bg-info rounded");
            $(emp).parent().find('input').each(function () {
                $(this).prop('disabled', !$(this).prop('disabled'));
            });
        }

        function show_group(s_name_group,emp){
            var val_show=$(emp).attr("value");
            if(val_show=="hide"){
                $(emp).find(".icon_show").attr("src", "public/SVG/ExUp.svg");
                $("."+s_name_group).show();
                $(emp).attr("value","show");
            }else{
                $(emp).find(".icon_show").attr("src", "public/SVG/Down.svg");
                $("."+s_name_group).hide();
                $(emp).attr("value","hide");
            }
        }

        function save_data(){
            var obj_s={};
            $(".field_data").each(function (index, emp) {
                var key_emp = $(emp).attr("field_key");
                var type_emp = $(emp).attr("field_type");
                var type_data = $(emp).attr("field_type_data");
                if (key_emp !== undefined) {
                    var v='';
                    if(type_emp=="emp_value")
                        v=$(emp).attr("value");
                    else
                        v= $(emp).val();

                    if(type_data=="number") v=Number(v);
                    if(type_data=="bool") v=(v?.toLowerCase?.() === 'true');

                    if(key_emp!="") obj_s[key_emp]=v;
                }
            });
            data_json.BcodeVin=obj_s;
            $.ajax({
                url: '/save-json',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    data_json: data_json,
                    file_name: 'Settings'
                }),
                success: function(response) {
                    console.log(response.message);
                    show_msg("Update success","Fieldbus Settings");
                },
                error: function(error) {
                    console.log(error.responseJSON.error);
                }
            });
        }
    </script>
</body>
</html>
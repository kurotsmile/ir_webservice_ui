    <%- include('p9_alet_warning.ejs') %>
    <script>
        function show_funnel(){
            var html='';
            html+='<div class="row">';
                html+='<div class="col-8">EOR Parameters</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Control Cycle #</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Spindle Cycle #</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Job Cycle #</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Date & Time</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Controller Name/Serial #</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-8">Torque Result</div>';
                html+='<div class="col-4">';
                html+='<img role="button" src="/public/SVG/Move.svg"/>';
                html+='<img role="button" style="width:48px;" src="/public/SVG/On.svg" class="btn_switch" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';
                html+='</div>';
            html+='</div>';

            var html_title='';
            html_title+='EOR Parameters';
            html_title+='<img role="button" style="width: 48px;float: right;position: absolute;right: 27px;top: 1px;" src="/public/SVG/On.svg" class="btn_switch mt-0" value="false" field_key="EnableDio" field_type="emp_value" field_type_data="bool"/>';

            show_msg(html,html_title,()=>{
                Load_UI();
                $("#btn_msg_done").click(()=>{
                    close_msg();
                });
            },"Save");
        }

        function Load_UI(){
            $(".btn_switch").each(function(){
                if ($(this).attr("value")=="true")
                    $(this).attr("src", "/public/SVG/On.svg");
                else 
                    $(this).attr("src", "/public/SVG/Off.svg");
            });

            $(".btn_switch").click(function(){
                var val_emp=$(this).attr("value");
                if(val_emp=="true"){
                    $(this).attr("src", "/public/SVG/Off.svg");
                    $(this).attr("value",false);
                }else{
                    $(this).attr("src", "/public/SVG/On.svg");
                    $(this).attr("value",true);
                }
            });
        }
    </script>
</body>
</html>
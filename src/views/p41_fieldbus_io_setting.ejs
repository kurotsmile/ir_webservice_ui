<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Fieldbus IO Settings</title>
    <link rel="icon" type="image/x-icon" href="/public/favicon.ico">
    <link href="/public/css/index.css?v=<%= ver %>" rel="stylesheet" />
    <link rel="stylesheet" href="/public/lib/bootstrap/bootstrap.min.css">
    <script src="/public/lib/jquery/jquery-3.6.0.min.js"></script>
    <script src="/public/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/public/js/app.js?v=<%= ver %>"></script>
</head>

<body class="brown">
    <%- include('menu_sidebar') %>

    <div class="p-1 px-md-4 mb-1 box-shadow" id="bar_menu_top">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-12 col-md-8 col-lg-8 col-xl-8">
                    <div class="row">
                        <div class="col-1">
                            &nbsp;
                        </div>
                        <div class="col-11">
                            <a href="/home"><img id="btn_back_menu_top" src="/public/SVG/Back.svg"/></a>
                            <h2 class="text-white">Fieldbus IO Settings</h2>
                            <div class="breadcrumb"><a class="nav1" href="/home">Home</a> <img style="width: 10px;height: 10px;margin: 6px;" src="/public/SVG/ArrowForward.svg"> Fieldbus IO Settings</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% const FieldbusIO=jsonData.FieldbusIO|| {};%>
    <!-- Main Content Full Width -->
    <main>
        <div class="container-fluid">
            <div class="row row-p">
                <div class="col-12 col-md-3 col-lg-3 col-xl-3">
                    <div class="label-txt">Input/Output</div>
                </div>
                <div class="col-12 col-md-3 col-lg-3 col-xl-3">
                    <div class="input-group r border mb-2 mt-2">
                        <span class="input-group-text r-left">&nbsp;</span>
                        <select class="form-select custom-combobox field_data" value="<%= FieldbusIO && FieldbusIO.Type ? FieldbusIO.Type : 'Input/Output' %>" field_key="Type"  field_type_data="string" field_type="emp_inp" > 
                            <option value="Input/Output" <%= FieldbusIO && FieldbusIO.Type === 'Input/Output' ? 'selected' : '' %>>Input/Output</option>
                            <option value="Input" <%= FieldbusIO && FieldbusIO.Type === 'Input' ? 'selected' : '' %>>Input</option>
                            <option value="Output" <%= FieldbusIO && FieldbusIO.Type === 'Output' ? 'selected' : '' %>>Output</option>
                        </select>                        
                        <span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-6 col-xl-6">&nbsp;</div>
            </div>

            <div class="row row-none mt-3 mb-3">
                <div class="col-6">
                    <div class="label-txt">Input Bytes Assignment</div>
                </div>

                <div class="col-6">
                    <button class="btn btn-info text-white btn-rounded f-right mt-3" onclick="show_add_byte('in');return false;"><img src="/public/SVG/Add.svg" >Add Input Bytes Assignment</button>
                </div>
            </div>

            <table class="table table-lg table-dark table-bordered table-p-list mb-5">
                <thead>
                  <tr>
                    <th scope="col" class="col_tb_id">Byte</th>
                    <th>Bit</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="table_in"></tbody>
            </table>


            <div class="row row-none mt-3 mb-3">
                <div class="col-6">
                    <div class="label-txt">Output Bytes Assignment</div>
                </div>

                <div class="col-6">
                    <button class="btn btn-info text-white btn-rounded f-right mt-3" onclick="show_add_byte('out');return false;"><img src="/public/SVG/Add.svg" >Add Output Bytes Assignment</button>
                </div>
            </div>

            <table class="table table-lg table-dark table-bordered table-p-list mb-5">
                <thead>
                  <tr>
                    <th scope="col" class="col_tb_id">Byte</th>
                    <th>Bit</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody id="table_out"></tbody>
            </table>
        </div>
    </main>

    <div id="menu_footer" class="fixed">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-info text-white btn-rounded f-right" onclick="save_data();return false;">Save</button>
                    <a href="home" class="btn btn-secondary text-white btn-rounded f-right">Cancel</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('p9_alet_warning.ejs') %>
    <script>
        var data_json= JSON.parse('<%- JSON.stringify(jsonData) %>');
        var count_byte_in=0;
        var count_byte_out=0;

        $(document).ready(()=>{
            $(".field_group_port2").hide();
            $("select").change(function(){
                var val=$(this).attr("value");
               $(this).attr("value",val);
            });

            $(".btn_switch").each(function(){
                if ($(this).attr("value")=="true")
                    $(this).attr("src", "/public/SVG/On.svg");
                else 
                    $(this).attr("src", "/public/SVG/Off.svg");
            });

            $(".btn_switch").click(function(){
                var val_emp=$(this).attr("value");
                if(val_emp=="true"){
                    $(this).attr("src", "/public/SVG/Off.svg");
                    $(this).attr("value",false);
                }else{
                    $(this).attr("src", "/public/SVG/On.svg");
                    $(this).attr("value",true);
                }
            });
        });

        function show_edit(emp){
            $(emp).parent().find('img').toggleClass("bg-info rounded");
            $(emp).parent().find('input').each(function () {
                $(this).prop('disabled', !$(this).prop('disabled'));
            });
        }

        function add_byte_row(index){
            var emp_row=$(`
            <tr>
                        <td>${index}</td>
                        <td class="list_btn_bit pt-3" style="text-align: right;">
                            <span class="btn_0">0</span>
                            <span class="btn_1">1</span>
                            <span class="btn_2">2</span>
                            <span class="btn_3">3</span>
                            <span class="btn_4">4</span>
                            <span class="btn_5">5</span>
                            <span class="btn_6">6</span>
                            <span class="btn_7">7</span>
                        </td>
                        <td><img role="button" class="btn-del" src="/public/SVG/Trash.svg"></td>
            </tr>`);
            var btn_del=$(emp_row).find(".btn-del");
            $(btn_del).click(function(){
                $(this).parent().parent().remove();
            });

            for(let i=0;i<=7;i++){
                let btn_bit=$(emp_row).find(".btn_"+i);
                $(btn_bit).click(function(){
                    var html='';
                    html+='<div class="row">';
                        html+='<div class="col-6">';
                            html+='<div class="label-txt">Behavior</div>';
                        html+='</div>';
                        html+='<div class="col-6">';
                            html+='<div class="input-group r border mb-2 mt-2">';
                                html+='<span class="input-group-text r-left">&nbsp;</span>';
                                html+='<select class="form-select custom-combobox">';
                                    html+='<option value="None">None</option>';
                                    for(var y=1;y<=32;y++){
                                        html+='<option value="job'+y+'">job'+y+'</option>';
                                    }                                    
                                html+='</select>';
                                html+='<span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>';
                            html+='</div>';
                        html+='</div>';
                    html+='</div>';

                    html+='<div class="row">';
                        html+='<div class="col-6">';
                            html+='<div class="label-txt">Polarity</div>';
                        html+='</div>';
                        html+='<div class="col-6">';
                            html+='<div class="input-group r border mb-2 mt-2">';
                                html+='<span class="input-group-text r-left">&nbsp;</span>';
                                html+='<select class="form-select custom-combobox">';
                                    html+='<option value="Normally Open">Normally Open</option>';
                                    html+='<option value="Normally Close">Normally Close</option>';
                                html+='</select>';
                                html+='<span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>';
                            html+='</div>';
                        html+='</div>';
                    html+='</div>';

                    show_msg(html,"Input Byte "+index+", Bit "+i,()=>{
                        $("#btn_msg_done").click(()=>{
                            close_msg();
                            $(btn_bit).addClass("active");
                        });
                    },"OK");
                });
            }
            return emp_row;
        }

        function save_data(){
            var obj_s={};
            $(".field_data").each(function (index, emp) {
                var key_emp = $(emp).attr("field_key");
                var type_emp = $(emp).attr("field_type");
                var type_data = $(emp).attr("field_type_data");
                if (key_emp !== undefined) {
                    var v='';
                    if(type_emp=="emp_value")
                        v=$(emp).attr("value");
                    else
                        v= $(emp).val();

                    if(type_data=="number") v=Number(v);
                    if(type_data=="bool") v=(v?.toLowerCase?.() === 'true');

                    if(key_emp!="") obj_s[key_emp]=v;
                }
            });
            data_json.FieldbusIO=obj_s;
            $.ajax({
                url: '/save-json',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    data_json: data_json,
                    file_name: 'Settings'
                }),
                success: function(response) {
                    console.log(response.message);
                    show_msg("Update success","Fieldbus IO Settings");
                },
                error: function(error) {
                    console.log(error.responseJSON.error);
                }
            });
        }

        function show_add_byte(type='in'){
            var html='';
            html='<div class="row">';
                html+='<div class="col-6"><div class="label-txt">Input/Output</div></div>';
                html+='<div class="col-6">';
                    html+='<div class="input-group r border mb-2 mt-2">';
                        html+='<span class="input-group-text r-left">&nbsp;</span>';
                        if(type=='in')
                            html+='<input type="text" placeholder="Input" value="Input" class="form-control" disabled>';
                        else
                            html+='<input type="text" placeholder="Output" value="Output" class="form-control" disabled>';
                        html+='<span class="input-group-text r-right">&nbsp;</span>';
                    html+='</div>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-6">';
                    html+='<div class="label-txt">Type</div>';
                html+='</div>';
                html+='<div class="col-6">';
                    html+='<div class="input-group r border mb-2 mt-2">';
                        html+='<span class="input-group-text r-left">&nbsp;</span>';
                        html+='<select class="form-select custom-combobox">';
                            html+='<option value="Bit">Bit</option>';
                            html+='<option value="BCODE/VIN">BCODE/VIN</option>';
                        html+='</select>';
                        html+='<span class="input-group-text r-right"><img src="/public/SVG/Dropdown.svg"/></span>';
                    html+='</div>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row">';
                html+='<div class="col-6"><div class="label-txt">Byte(s)</div></div>';
                html+='<div class="col-6">';
                    html+='<div class="input-group r border mb-2 mt-2">';
                        html+='<span class="input-group-text r-left">&nbsp;</span>';
                        html+='<input type="text" placeholder="Input" value="1" class="form-control" id="num_val_byte"/>';
                        html+='<span class="input-group-text r-right"><span role="button" class="input-group-text r-right" onclick="show_edit(this)"><img src="/public/SVG/Edit2.svg"/></span></span>';
                    html+='</div>';
                html+='</div>';
            html+='</div>';

            html+='<div class="row text-center">';
                html+='<div class="col-12"><div class="label-txt"><b>* Avalilable number of input Bytes \'253\'*</b></div></div>';
            html+='</div>';

            show_msg(html,"Show Add Byte",()=>{
                $("#box_msg").css("width","490px");
                $("#btn_msg_done").click(()=>{
                    var num_val_byte=Number($("#num_val_byte").val());
                    close_msg();
                    if(data_json.Fieldbus.IO==undefined) data_json.Fieldbus.IO={};
                    data_json.Fieldbus.IO.IByteCount=num_val_byte;
                    for(var i=0;i<num_val_byte;i++){
                        count_byte_in++;
                        if(type=='in')
                            $("#table_in").append(add_byte_row(count_byte_in));
                        else
                            $("#table_out").append(add_byte_row(count_byte_in));
                    }
                    $.ajax({
                        url: '/save-json',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({
                            data_json: data_json,
                            file_name: 'Communication'
                        }),
                        success: function(response) {
                            console.log(response.message);
                        },
                        error: function(error) {
                            console.log(error.responseJSON.error);
                        }
                    });
                });
            },"Ok");
        }
    </script>
</body>
</html>
                if(val_emp=="true"){
                    $(this).attr("src", "/public/SVG/Off.svg");
                    $(this).attr("value",false);
                }else{
                    $(this).attr("src", "/public/SVG/On.svg");
                    $(this).attr("value",true);
                }
            });

            $("#f_Type").change(function(){
                var v_val=$(this).val();
                index_type=parseInt(v_val);
                load_form();
            });

            check_field_Method();
        }

